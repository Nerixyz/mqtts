{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es2019",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strict": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.ts"]
}
